<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <display-name>DWR Servlet</display-name>
        <servlet-name>dwr-invoker</servlet-name>
        <servlet-class>org.directwebremoting.servlet.DwrServlet</servlet-class>
        <init-param>
            <param-name>debug</param-name>
            <param-value>true</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Cadastro</servlet-name>
        <servlet-class>controller.militar.Cadastro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Atualizacao</servlet-name>
        <servlet-class>controller.militar.Atualizacao</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Atualizacao</servlet-name>
        <url-pattern>/restrito/militar/controller.militar/Atualizacao</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Cadastro</servlet-name>
        <url-pattern>/controller.militar/Cadastro</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Atualizar</servlet-name>
        <servlet-class>controller.militar.Atualizar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Atualizar</servlet-name>
        <url-pattern>/restrito/militar/controller.militar/Atualizar</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AtualizarSenha</servlet-name>
        <servlet-class>controller.militar.AtualizarSenha</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AtualizarSenha</servlet-name>
        <url-pattern>/restrito/militar/controller.militar/AtualizarSenha</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Excluir</servlet-name>
        <servlet-class>controller.militar.Excluir</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Excluir</servlet-name>
        <url-pattern>/restrito/militar/controller.militar/Excluir</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Ativar</servlet-name>
        <servlet-class>controller.militar.Ativar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Ativar</servlet-name>
        <url-pattern>/restrito/militar/controller.militar/Ativar</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GerarRelatorioAvlPreliminar</servlet-name>
        <servlet-class>controller.relatorio.GerarRelatorioAvlPreliminar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dwr-invoker</servlet-name>
        <url-pattern>/dwr/*</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>FiltroPaginas</filter-name>
        <filter-class>controller.FiltroPaginas</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FiltroPaginas</filter-name>
        <url-pattern>/restrito/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>Autenticador</servlet-name>
        <servlet-class>controller.Autenticador</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Autenticador</servlet-name>
        <url-pattern>/Autenticador</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Sair</servlet-name>
        <servlet-class>controller.Sair</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Sair</servlet-name>
        <url-pattern>/restrito/Sair</url-pattern>
        <url-pattern>/restrito/militar/Sair</url-pattern>
        <url-pattern>/restrito/relatorio/Sair</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GerarRelatorioPdf</servlet-name>
        <servlet-class>controller.relatorio.GerarRelatorioPdf</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GerarRelatorioPdf</servlet-name>
        <url-pattern>/restrito/relatorio/controller.relatorio/GerarRelatorioPdf</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
